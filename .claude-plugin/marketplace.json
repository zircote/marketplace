{
  "name": "epicpast-marketplace",
  "owner": {
    "name": "epic pastures",
    "email": "bob@epicpastures.com",
    "url": "https://github.com/epicpast"
  },
  "metadata": {
    "description": "NSIP sheep breeding data tools and MCP integrations for Claude Code",
    "version": "1.3.0"
  },
  "plugins": [
    {
      "name": "nsip",
      "source": "./",
      "description": "Access NSIP sheep breeding data with MCP tools and slash commands",
      "version": "1.3.0",
      "author": {
        "name": "epic pastures",
        "email": "bob@epicpastures.com",
        "url": "https://github.com/epicpast"
      },
      "license": "MIT",
      "keywords": ["nsip", "sheep", "breeding", "MCP", "claude-code"],
      "strict": false,
      "commands": [
        "./plugins/nsip/commands/consult.md",
        "./plugins/nsip/commands/discover.md",
        "./plugins/nsip/commands/health.md",
        "./plugins/nsip/commands/lineage.md",
        "./plugins/nsip/commands/lookup.md",
        "./plugins/nsip/commands/profile.md",
        "./plugins/nsip/commands/progeny.md",
        "./plugins/nsip/commands/search.md",
        "./plugins/nsip/commands/test-api.md",
        "./plugins/nsip/commands/traits.md"
      ],
      "agents": [
        "./plugins/nsip/agents/shepherd.md"
      ],
      "mcpServers": [
        "./plugins/nsip/.mcp.json"
      ],
      "hooks": {
        "PreToolUse": [
          {
            "matcher": "mcp__nsip__nsip_get_animal",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/lpn_validator.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/trait_dictionary.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_search_by_lpn",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/lpn_validator.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/trait_dictionary.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_lineage",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/lpn_validator.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_progeny",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/lpn_validator.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_search_animals",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/breed_context_injector.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/trait_dictionary.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_trait_ranges",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/breed_context_injector.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/trait_dictionary.py"
              }
            ]
          }
        ],
        "PostToolUse": [
          {
            "matcher": "mcp__nsip__.*",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/auto_retry.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/error_notifier.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_animal",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/fallback_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/query_logger.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/result_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/breeding_report.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_search_by_lpn",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/fallback_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/query_logger.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/result_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/breeding_report.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_search_animals",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/fallback_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/query_logger.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/csv_exporter.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_lineage",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/fallback_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/query_logger.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/result_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/pedigree_visualizer.py"
              }
            ]
          },
          {
            "matcher": "mcp__nsip__nsip_get_progeny",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/fallback_cache.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/query_logger.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/result_cache.py"
              }
            ]
          }
        ],
        "SessionStart": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/api_health_check.py"
              }
            ]
          }
        ],
        "UserPromptSubmit": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/smart_search_detector.py"
              },
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/plugins/nsip/hooks/scripts/comparative_analyzer.py"
              }
            ]
          }
        ]
      }
    }
  ]
}
