{
  "name": "nsip",
  "version": "1.3.0",
  "description": "Access NSIP sheep breeding data with MCP tools and slash commands",
  "author": {
    "name": "epic pastures",
    "email": "bob@epicpastures.com",
    "url": "https://github.com/epicpast"
  },
  "license": "MIT",
  "keywords": ["nsip", "sheep", "breeding", "MCP", "claude-code"],
  "commands": [
    "./commands/consult.md",
    "./commands/discover.md",
    "./commands/health.md",
    "./commands/lineage.md",
    "./commands/lookup.md",
    "./commands/profile.md",
    "./commands/progeny.md",
    "./commands/search.md",
    "./commands/test-api.md",
    "./commands/traits.md"
  ],
  "agents": [
    "./agents/shepherd.md"
  ],
  "mcpServers": [
    "./.mcp.json"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__nsip__nsip_get_animal",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/lpn_validator.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/trait_dictionary.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_search_by_lpn",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/lpn_validator.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/trait_dictionary.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_lineage",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/lpn_validator.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_progeny",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/lpn_validator.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_search_animals",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/breed_context_injector.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/trait_dictionary.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_trait_ranges",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/breed_context_injector.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/trait_dictionary.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__nsip__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/auto_retry.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/error_notifier.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_animal",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/fallback_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/query_logger.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/result_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/breeding_report.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_search_by_lpn",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/fallback_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/query_logger.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/result_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/breeding_report.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_search_animals",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/fallback_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/query_logger.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/csv_exporter.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_lineage",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/fallback_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/query_logger.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/result_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/pedigree_visualizer.py"
          }
        ]
      },
      {
        "matcher": "mcp__nsip__nsip_get_progeny",
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/fallback_cache.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/query_logger.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/result_cache.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/api_health_check.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/smart_search_detector.py"
          },
          {
            "type": "command",
            "command": "${PLUGIN_DIR}/hooks/scripts/comparative_analyzer.py"
          }
        ]
      }
    ]
  }
}
